<section id="jobs">
  <% @jobs.each do |job| %>
    <% unless job.expired? %>
      <div class="jobs">
        <h1><%= job.title %></h1>
        <p><%= job.location %></p>
        <p><%= job.company.name %></p>
        <% if job.recent? %>
          <em>Novidade</em><br>
        <% end %>
        <%= link_to 'Ver mais', job %>
      </div>
    <% end %>
  <% end %>
</section>
<aside>
  <% @companies.each do |company| %>
    <%= link_to company.name, company %>
    <% if(company.premium?) %>
      <em>Empresa Premium</em>
    <% end %>
  <% end %>
</aside>
<aside>
  <% @categories.each do |category| %>
    <%= link_to category.name, category %>
  <% end %>
</aside>
