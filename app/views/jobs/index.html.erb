<section id="jobs">
  <% @jobs.each do |job| %>
    <div class="jobs">
      <h1><%= job.title %></h1>
      <p><%= job.location %></p>
      <p><%= job.company.name %></p>
      <% if job.recent? %>
        <em>Novidade</em><br>
      <% end %>
      <% if job.company.premium? %>
        <p>Empresa Premium</p>
      <% end %>
      <%= link_to 'Ver mais', job %>
    </div>
  <% end %>
</section>
<aside>
  <% @companies.each do |company| %>
    <%= link_to company.name, company %>
  <% end %>
</aside>
<aside>
  <% @categories.each do |category| %>
    <%= link_to category.name, category %>
  <% end %>
</aside>
